pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/devesht-ML/To_Do_List.git'
            }
        }

        stage('Set up Python') {
            steps {
                sh 'python -m venv venv'
                sh '. venv/Scripts/activate && pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh '. venv/Scripts/activate && python -m unittest discover -s tests'
            }
        }

        stage('Run Flask App') {
            steps {
                sh '. venv/Scripts/activate && python app.py'
            }
        }
    }
}
